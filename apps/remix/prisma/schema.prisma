// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Tag       NoteTag  @relation(fields: [noteTagId], references: [id])
  noteTagId String
}

model NoteTag {
  id   String @id @default(cuid())
  tag  String @unique
  Note Note[]
}
